{
  "version": 2,
  "functions": {
    "backend/index.js": {
      "maxDuration": 10,
      "memory": 1024,
      "maxSize": "10mb"
    }
  },
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/cassamedicalclinic"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/index.js"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/backend/index.js"
    },
    {
      "source": "/:path*",
      "destination": "/dist/cassamedicalclinic/index.html"
    }
  ]
}
