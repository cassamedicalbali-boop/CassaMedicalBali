{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/cassamedicalclinic"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/index.js"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/dist/cassamedicalclinic/sitemap.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "/dist/cassamedicalclinic/robots.txt"
    },
    {
      "source": "/:path*",
      "destination": "/dist/cassamedicalclinic/index.html"
    }
  ]
}
